{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "renovate"
  ],
  "configMigration": true,
  "rebaseWhen": "automerging",
  "timezone": "Asia/Tokyo",
  "schedule": [
    "* * * * 6"
  ],
  "extends": [
    "config:js-app",
    ":automergeMinor"
  ],
  "major": {
    "minimumReleaseAge": "28 days"
  },
  "minor": {
    "minimumReleaseAge": "14 days"
  },
  "patch": {
    "minimumReleaseAge": "7 days"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.tool-versions$/"
      ],
      "matchStrings": [
        "^bun (?<currentValue>\\S+)$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "oven/bun",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "groupName": "all minor dependencies",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "groupName": "bun dependencies",
      "matchManagers": [
        "dockerfile",
        "asdf",
        "custom.regex",
        "npm",
        "pnpm",
        "yarn"
      ],
      "matchPackageNames": [
        "bun",
        "@types/bun",
        "oven/bun"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "timberio/vector"
      ],
      "automerge": false
    }
  ]
}
