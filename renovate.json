{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["renovate"],
  "configMigration": true,
  "rebaseWhen": "automerging",
  "timezone": "Asia/Tokyo",
  "schedule": ["* * * * 6"],
  "automergeSchedule": ["* * * * 0"],
  "extends": ["config:js-app", ":automergeMinor"],
  "major": {
    "minimumReleaseAge": "28 days"
  },
  "minor": {
    "minimumReleaseAge": "14 days"
  },
  "patch": {
    "minimumReleaseAge": "7 days"
  },
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "all minor dependencies",
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "bun dependencies",
      "matchPackageNames": ["bun", "@types/bun", "oven/bun", "oven-sh/bun"],
      "automerge": false
    },
    {
      "groupName": "biome dependencies",
      "matchPackageNames": ["@biomejs/biome"],
      "automerge": false
    },
    {
      "groupName": "orval dependencies",
      "matchPackageNames": ["orval"],
      "automerge": false
    },
    {
      "groupName": "Playwright dependencies",
      "matchPackageNames": [
        "@playwright/test",
        "playwright",
        "mcr.microsoft.com/playwright"
      ],
      "automerge": false
    },
    {
      "groupName": "supabase vector",
      "matchPackageNames": ["timberio/vector"],
      "automerge": false
    }
  ]
}
