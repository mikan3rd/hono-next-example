{
  "name": "frontend_app",
  "version": "0.1.0",
  "private": true,
  "imports": {
    "#src/supabase/client": {
      "storybook": "./src/supabase/client.mock.ts",
      "default": "./src/supabase/client.ts"
    }
  },
  "scripts": {
    "dev": "bun run --bun next dev",
    "next:build": "bun run --bun next build",
    "next:start": "bun run --bun next start",
    "typecheck": "bun run --bun tsgo --noEmit",
    "lint": "bun run --bun biome check . --error-on-warnings",
    "lint:fix": "bun run --bun biome check . --write --unsafe",
    "dev-storybook": "bun run --bun storybook dev -p 6006",
    "build-storybook": "bun run --bun storybook build",
    "test-storybook": "bun run vitest --project=storybook",
    "gen:client": "bun run --bun orval"
  },
  "dependencies": {
    "@js-temporal/polyfill": "0.5.1",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@supabase/ssr": "0.7.0",
    "@supabase/supabase-js": "2.57.4",
    "@t3-oss/env-nextjs": "0.13.8",
    "@tailwindcss/postcss": "4.1.13",
    "@tanstack/react-query": "5.87.4",
    "@types/node": "24.3.3",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.542.0",
    "next": "15.5.3",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.13",
    "tw-animate-css": "1.3.8",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@chromatic-com/storybook": "4.1.1",
    "@faker-js/faker": "10.0.0",
    "@storybook/addon-a11y": "9.1.5",
    "@storybook/addon-docs": "9.1.5",
    "@storybook/addon-vitest": "9.1.5",
    "@storybook/nextjs-vite": "9.1.5",
    "@typescript/native-preview": "7.0.0-dev.20250913.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "msw": "2.11.2",
    "msw-storybook-addon": "2.0.5",
    "orval": "7.11.2",
    "playwright": "1.55.0",
    "storybook": "9.1.5",
    "vitest": "3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
