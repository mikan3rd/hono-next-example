{
  "name": "e2e",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check . --error-on-warnings",
    "lint:fix": "biome check . --write",
    "e2e:local": "dotenvx run -- npx playwright test",
    "e2e:local:ui": "dotenvx run -- npx playwright test --ui",
    "e2e:docker": "npx playwright test",
    "e2e:docker:screenshot": "npx playwright test --update-snapshots",
    "e2e:show-report": "npx playwright show-report"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@dotenvx/dotenvx": "1.48.4",
    "@playwright/test": "1.54.2",
    "@t3-oss/env-core": "0.13.8",
    "@types/node": "24.2.1",
    "typescript": "5.9.2",
    "zod": "4.0.17"
  }
}
