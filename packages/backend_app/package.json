{
  "name": "backend_app",
  "scripts": {
    "dev": "bun run --hot --no-clear-screen src/server.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "bun run --bun drizzle-kit push",
    "typecheck": "bun run --bun tsgo --noEmit",
    "lint": "bun run --bun biome check . --error-on-warnings",
    "lint:fix": "bun run lint --write",
    "test:db:push": "bun --env-file=.env.test run --bun drizzle-kit push",
    "test:local": "bun --env-file=.env.test test",
    "test:db:studio": "bun --env-file=.env.test drizzle-kit studio",
    "gen:openapi": "bun run src/scripts/export-openapi/index.ts",
    "check:all": "bun run lint:fix && bun run typecheck && bun run gen:openapi && bun run test:local"
  },
  "dependencies": {
    "@hono/swagger-ui": "0.5.2",
    "@hono/zod-openapi": "1.1.2",
    "@supabase/supabase-js": "2.57.4",
    "@t3-oss/env-core": "0.13.8",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "0.44.5",
    "drizzle-zod": "0.8.3",
    "hono": "4.9.8",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "1.2.21",
    "@types/node": "24.3.3",
    "@types/pg": "8.15.5",
    "@typescript/native-preview": "7.0.0-dev.20250918.1"
  }
}
