{
  "name": "backend_app",
  "scripts": {
    "dev": "bun run --hot --no-clear-screen src/server.ts",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "bun run --bun drizzle-kit migrate",
    "db:push": "bun run --bun drizzle-kit push",
    "typecheck": "bun run --bun tsgo --noEmit",
    "lint": "bun run --bun biome check . --error-on-warnings",
    "lint:fix": "bun run lint --write --unsafe",
    "test:db:push": "bun --env-file=.env.test run --bun drizzle-kit push",
    "test:db:migrate": "bun --env-file=.env.test run --bun drizzle-kit migrate",
    "test:local": "bun --env-file=.env.test test",
    "test:db:studio": "bun --env-file=.env.test drizzle-kit studio",
    "gen:openapi": "bun run src/scripts/export-openapi/index.ts",
    "check:all": "bun install && bun run gen:openapi && bun run lint:fix && bun run typecheck && bun run test:local"
  },
  "dependencies": {
    "@hono/swagger-ui": "0.5.3",
    "@hono/zod-openapi": "1.1.6",
    "@supabase/supabase-js": "2.87.1",
    "@t3-oss/env-core": "0.13.10",
    "drizzle-kit": "0.31.8",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "es-toolkit": "1.43.0",
    "hono": "4.11.3",
    "postgres": "3.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@faker-js/faker": "10.1.0",
    "@types/bun": "1.3.5",
    "@types/node": "24.10.4",
    "@typescript/native-preview": "7.0.0-dev.20251227.1"
  }
}
